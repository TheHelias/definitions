{
  "openapi": "3.0.2",
  "info": {
    "title": "Write Person Basic Information",
    "description": "Create or update a minimal set of basic information of a person",
    "version": "1.0.0"
  },
  "paths": {
    "/draft/Person/BasicInformation/Write": {
      "post": {
        "summary": "Write Person Basic Information",
        "description": "Write Person Basic Information",
        "operationId": "request_draft_Person_BasicInformation_Write",
        "parameters": [
          {
            "description": "Consent token",
            "required": true,
            "schema": {
              "title": "X-Consent-Token",
              "type": "string",
              "description": "Consent token"
            },
            "name": "x-consent-token",
            "in": "header"
          },
          {
            "description": "The login token. Value should be \"Bearer [token]\"",
            "required": true,
            "schema": {
              "title": "Authorization",
              "type": "string",
              "description": "The login token. Value should be \"Bearer [token]\""
            },
            "name": "authorization",
            "in": "header"
          },
          {
            "description": "The bare domain of the system that provided the token.",
            "required": false,
            "schema": {
              "title": "X-Authorization-Provider",
              "type": "string",
              "description": "The bare domain of the system that provided the token."
            },
            "name": "x-authorization-provider",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicInformationRequestResponse"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BasicInformationRequestResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConsentRequired"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceNotFound"
                }
              }
            }
          },
          "502": {
            "description": "Bad Gateway",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor502"
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceUnavailable"
                }
              }
            }
          },
          "504": {
            "description": "Gateway Timeout",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceTimeout"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AuthorizationRequired": {
        "title": "AuthorizationRequired",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Authorization is required to access this data source"
          }
        }
      },
      "AuthorizationRequiredForUnpublished": {
        "title": "AuthorizationRequiredForUnpublished",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Unpublished data sources require preview token"
          }
        }
      },
      "BasicInformationRequestResponse": {
        "title": "BasicInformationRequestResponse",
        "required": ["email"],
        "type": "object",
        "properties": {
          "givenName": {
            "title": "Given name",
            "maxLength": 250,
            "type": "string",
            "description": "The first name that the person is being called by",
            "example": "John"
          },
          "lastName": {
            "title": "Last name",
            "maxLength": 250,
            "type": "string",
            "description": "The person's current family name",
            "example": "Doe"
          },
          "email": {
            "title": "Email",
            "type": "string",
            "description": "The person's contact email address",
            "format": "email",
            "example": "john.doe@test.fi"
          },
          "phoneNumber": {
            "title": "Phone number",
            "maxLength": 250,
            "type": "string",
            "description": "The person's phone number in the international format",
            "example": "+358501234567"
          },
          "residency": {
            "title": "Residency",
            "allOf": [
              {
                "$ref": "#/components/schemas/ISO_3166_1_Alpha_3"
              }
            ],
            "description": "The person's current country of the residency in the three character (Alpha-3) format",
            "example": "USA"
          }
        }
      },
      "ConsentRequired": {
        "title": "ConsentRequired",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Consent is required to access this data source"
          }
        }
      },
      "DataSourceError": {
        "title": "DataSourceError",
        "required": ["status", "error"],
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Data source returned an error"
          },
          "status": {
            "title": "Status code",
            "minimum": 400.0,
            "type": "integer",
            "description": "Status code from the data source"
          },
          "error": {
            "title": "Original error",
            "description": "Raw error from the data source"
          }
        }
      },
      "DataSourceNotFound": {
        "title": "DataSourceNotFound",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Requested data source is not found"
          }
        }
      },
      "DataSourceTimeout": {
        "title": "DataSourceTimeout",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Timeout reached while communicating with the data source"
          }
        }
      },
      "DataSourceUnavailable": {
        "title": "DataSourceUnavailable",
        "type": "object",
        "properties": {
          "message": {
            "title": "Message",
            "type": "string",
            "default": "Error while communicating with the data source"
          }
        }
      },
      "DoesNotConformToDefinition": {
        "title": "DoesNotConformToDefinition",
