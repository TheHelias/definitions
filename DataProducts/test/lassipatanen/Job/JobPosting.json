{
  "openapi": "3.0.2",
  "info": {
    "title": "Job Posting",
    "description": "Data product for Job Posting",
    "version": "1.0"
  },
  "paths": {
    "/test/lassipatanen/Job/JobPosting": {
      "post": {
        "summary": "test/Job/JobPosting",
        "operationId": "request_test_JobPosting",
        "parameters": [
          {
            "description": "Optional consent token",
            "required": false,
            "schema": {
              "title": "X-Consent-Token",
              "type": "string",
              "description": "Optional consent token"
            },
            "name": "x-consent-token",
            "in": "header"
          },
          {
            "description": "The login token. Value should be \"Bearer [token]\"",
            "required": false,
            "schema": {
              "title": "Authorization",
              "type": "string",
              "description": "The login token. Value should be \"Bearer [token]\""
            },
            "name": "authorization",
            "in": "header"
          },
          {
            "description": "The bare domain of the system that provided the token.",
            "required": false,
            "schema": {
              "title": "X-Authorization-Provider",
              "type": "string",
              "description": "The bare domain of the system that provided the token."
            },
            "name": "x-authorization-provider",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobPostingResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JobPostingRequest"
              }
            }
          }
        },
        "description": "Job Posting"
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPValidationError": {
        "title": "HTTPValidationError",
        "type": "object",
        "properties": {
          "detail": {
            "title": "Detail",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "ValidationError": {
        "title": "ValidationError",
        "required": ["loc", "msg", "type"],
        "type": "object",
        "properties": {
          "loc": {
            "title": "Location",
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        }
      },
      "JobPostingRequest": {
        "title": "JobPostingRequest",
        "type": "object",
        "description": "",
        "properties": {
          "query": {
            "type": "string",
            "description": "Comma separated list of query keywords to search for."
          },
          "location": {
            "type": "object",
            "properties": {
              "countries": {
                "type": "array",
                "description": "Sijainnin maa-tiedon koodistona käytetään ISO 3166 standardin mukaisia numerokoodeja.",
                "items": {
                  "type": "string",
                  "example": "FI"
                }
              },
              "regions": {
                "type": "array",
                "description": "Sijainnin maakunta-tiedon koodistona käytetään Tilastokeskuksen Maakunnat 2022-luokituksen mukaisia numerokoodeja.",
                "items": {
                  "type": "string",
                  "example": "09"
                }
              },
              "municipalities": {
                "type": "array",
                "description": "Sijainnin kunta-tiedon koodistona käytetään Tilastokeskuksen Kunnat 2022-luokituksen mukaisia kuntien numerokoodeja.",
                "items": {
                  "type": "string",
                  "example": "405"
                }
              }
            }
          },
          "paging": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "integer"
              },
              "offset": {
                "type": "integer"
              }
            }
          }
        }
      },
      "JobPostingResponse": {
        "x-examples": {},
        "type": "object",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/JobPosting"
            }
          },
          "totalCount": {
            "type": "integer",
            "description": "Total count of job postings",
            "example": 1
          }
        },
        "required": ["results", "totalCount"]
      },
      "JobPosting": {
        "title": "JobPostingEntry",
        "type": "object",
        "properties": {
          "employer": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "required": ["municipality"],
            "properties": {
              "municipality": {
                "type": "string"
              }
            }
          },
          "basicInfo": {
            "type": "object",
            "required": ["title", "description"],
            "properties": {
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          },
          "publishedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["employer", "location", "basicInfo", "publishedAt"]
      }
    }
  }
}
